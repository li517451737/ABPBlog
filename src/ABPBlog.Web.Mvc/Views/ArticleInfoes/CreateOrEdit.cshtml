@using ABPBlog.Web.Startup
@model ABPBlog.Web.Models.Articles.CreateOrEditArticleInfoViewModel
@{
    ViewBag.CurrentPageName = PageNames.Articles;
    string title =(Model.IsEdit ? L("EditArticleInfo") : L("CreateArticleInfo"));
}
@section scripts
    {
    <environment names="Development">
        <script src="~/lib/ckeditor/ckeditor.js" asp-append-version="true"></script>
        <script src="~/lib/ckeditor/styles.js" asp-append-version="true"></script>
        <script src="~/view-resources/Views/Articles/createOrEditArticleInfo.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Articles/createOrEditArticleInfo.min.js" asp-append-version="true"></script>
    </environment>
}
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row clearfix">
        <ol class="breadcrumb">
            <li><a href="/">@L("Home")</a></li>
            <li><a asp-action="Index">@L("ArticleList")</a></li>
            <li class="active">@title</li>
        </ol>
    </div>
    <div class="card" style="padding:12px">
        <form id="createOrEditArticleForm" class="form-validation">
            <div class="row clearfix" style="margin-top:10px;">
                <div class="col-sm-12">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input id="rolename" type="text" name="Name" value="" required maxlength="32" minlength="2" class="validate form-control">
                            <label for="rolename" class="form-label">@L("Title")</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-12">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <textarea id="displayname" type="text" name="DisplayName" value="" required maxlength="32" minlength="2" class="validate form-control"></textarea>
                            <label for="displayname" class="form-label">@L("Intro")</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-12">
                    <div class="form-group form-float">
                        <label for="Content" class="form-label">@L("Content")</label>
                        <div class="form-line">
                            <textarea id="Content" type="text" name="Content" value="" required class="ckeditor"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
