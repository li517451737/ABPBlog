@using ABPBlog.Web.Startup
@{
    ViewBag.CurrentPageName = PageNames.ArticleInfoes;
}
@section scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Views/Articles/ArticleInfo.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Articles/ArticleInfo.min.js" asp-append-version="true"></script>
    </environment>
}
<section class="content-header">
    <h1>
        @L("ABPBlog_Pages_Articles")
        <small>管理文章信息</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i>@L("HomePage")</a></li>
        <li>文章管理</li>
        <li><a asp-action="Index" class="active">@L("ABPBlog_Pages_Articles")</a></li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-sm-12">
            <div class="header">
                <div class="btn-group">
                    <a asp-action="CreateOrEdit" class="btn btn-primary blue">@L("ABPBlog_Pages_Articles_Create")</a>
                </div>
            </div>
            <div class="body table-responsive">
                <table id="articleTable" class="table table-bordered table-striped table-hover"></table>
            </div>
            <!-- /.col -->
        </div>
    </div>
    <!-- /.row -->
</section>